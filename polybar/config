[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
secondary = ${xrdb:secondary}
underline = ${xrdb:active}

[bar/default]
monitor = ${env:MONITOR:}
height = 20
offset-y = 0
top = true
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
padding-left = 0
padding-right = 3
module-margin = 2
font-0 = Ubuntu Mono:style=Regular:size=7
font-1 = Ubuntu Mono:style=Regular:size=7
modules-left = i3
; modules-center = xwindow
modules-right = wireless cpu memory swap filesystem battery volume date powermenu
tray-position = right
desactivated modules : spotify


[module/i3]
type = internal/i3
pin-workspaces = true
index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true
format = <label-mode><label-state>
label-mode-padding = 2
label-mode-underline = ${colors.underline}
label-focused = %index%  %icon%
label-focused-foreground = ${colors.underline}
label-focused-underline = ${colors.underline}
label-focused-padding = 2
label-unfocused = %index%  %icon%
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.foreground}
label-unfocused-underline = ${colors.secondary}
label-visible = %index%  %icon%
label-visible-underline = ${colors.foreground}
label-visible-padding = 2
label-urgent = %index%  %icon%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.underline}
label-urgent-underline = ${colors.underline}
label-urgent-padding = 2

ws-icon-0 = 1
ws-icon-1 = 2
ws-icon-2 = 3
ws-icon-3 = 4
ws-icon-4 = 5
ws-icon-5 = 6
ws-icon-6 = 7
ws-icon-7 = 8
ws-icon-8 = 9

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = "FS %percentage_used%%"
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.secondary}
label-mounted-underline = ${colors.secondary}

[module/cpu]
type = internal/cpu
interval = 2
format = <label>
format-prefix = "CPU "
format-underline = ${colors.secondary}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "MEM "
format-underline = ${colors.secondary}
label = %percentage_used%%

[module/swap]
type = custom/script
interval = 2
exec = free -m | grep 'Swap' | awk '{used = $3; free = $4; print int(used/(used+free)*100)}'
format = <label>
format-prefix = "SWAP "
format-suffix = "%"
format-underline = ${colors.secondary}
label = "%output:0:30%"

[module/date]
type = internal/date
interval = 5
date = %B %d,
time = %H:%M:%S
label = %date% %time%
format-underline = ${colors.secondary}

[module/volume]
type = internal/volume
format-volume = SND <ramp-volume>  <label-volume>
format-muted = MUTED
label-volume = %percentage%%
label-volume-underline = ${colors.secondary}
format-volume-underline = ${colors.secondary}
label-muted-underline = ${colors.secondary}
format-muted-underline = ${colors.secondary}
label-muted = %percentage%%
ramp-volume-0 = [.   ]
ramp-volume-1 = [..  ]
ramp-volume-2 = [... ]
ramp-volume-3 = [....]

[module/wired]
type = internal/network
interface = eth0
format-connected = <label-connected>
format-connected-underline = ${colors.secondary}
format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.underline}
label-connected = ïƒ¨ %local_ip%
label-disconnected = ïƒ¨

[module/wireless]
type = internal/network
interface = wlp2s0
interval = 1
ping-interval = 3
accumulate-stats = true
format-connected = <ramp-signal> <label-connected>
format-disconnected = <label-disconnected>
format-connected-underline = ${colors.foreground}
format-disconnected-underline = ${colors.secondary}
label-connected = %essid%%downspeed:9%
label-disconnected = ï‡«
label-disconnected-foreground = ${colors.secondary}
ramp-signal-0 = ðŸ˜±
ramp-signal-1 = ðŸ˜ 
